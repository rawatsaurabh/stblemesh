<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lytQuestionAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corner_stroke_blue"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provided security questions/answers to reset password credentials"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_star_red_24dp" />

            <TextView
                android:id="@+id/txtQuest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ques 1"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edtAns1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ans"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_star_red_24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtQuest2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ques 2"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edtAns2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ans"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_star_red_24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtQuest3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ques 3"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edtAns3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ans"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/butSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/ST_primary_blue"
        android:text="@string/str_submit_label"/>

</LinearLayout>