<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.st.bluenrgmesh.view.fragments.other.About">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMain"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:text="ST BLE Mesh App"
        android:textColor="@color/ST_primary_blue"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVersion"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_below="@+id/txtMain"
        android:layout_marginLeft="10dp"
        android:text="Version:"
        android:textColor="#000"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_below="@+id/txtVersion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_launcher_round" />


   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/button"
       android:text="Software Components"
       android:textSize="17dp"
       android:layout_marginTop="25dp"
       android:layout_below="@+id/companyLogo"
       android:textStyle="bold"
       android:textColor="@color/ST_primary_blue"
       android:id="@+id/btnLicense"
      />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Help"
        android:textSize="17dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btnLicense"
        android:textStyle="bold"
        android:textColor="@color/ST_primary_blue"
        android:id="@+id/lytHelp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Privacy Policy"
        android:textSize="17dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/lytHelp"
        android:textStyle="bold"
        android:textColor="@color/ST_primary_blue"
        android:id="@+id/txtPrivacyPolicy"
        />

</RelativeLayout>
